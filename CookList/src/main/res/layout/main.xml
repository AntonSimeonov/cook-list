<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"

        >
    <TextView
        android:id="@+id/tvListName"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:gravity="left"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textAllCaps="true"
        android:textColor="@color/redish"

        android:text="@string/tv_main_list_name"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:weightSum="100"
        >

    <TextView
            android:id="@+id/tvDropZone"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:textSize="15sp"
        android:textColor="@color/redish"
        android:background="@color/skyBlue"
        android:layout_gravity="center"
            android:textAllCaps="true"
            android:gravity="left"
        android:layout_weight="20"
            android:text="@string/tv_main_drop_zone"
            />
        <TextView
            android:id="@+id/tvLeftDZBraket"
            android:layout_height="20dp"
            android:textColor="@color/redish"
            android:background="@color/skyBlue"
            android:layout_gravity="center"
            android:gravity="right"
            android:textSize="15sp"

            android:layout_weight="40"
            android:layout_width="fill_parent" />

        <TextView
            android:id="@+id/tvRightDZBraket"
            android:layout_height="20dp"
            android:textColor="@color/redish"
            android:background="@color/skyBlue"
            android:layout_gravity="center"
            android:gravity="left"
            android:textSize="15sp"
            android:layout_weight="40"

            android:layout_width="fill_parent" />
    </LinearLayout>



    <FrameLayout
        android:id="@+id/flDefoltQuantityValues"
        android:layout_height="65dp"
        android:layout_width="fill_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        />




<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/skyBlue"
    android:gravity="center"
    android:textColor="@color/redish"
    android:text="@string/store"
    />




    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum=
                "100"
            >
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:weightSum="100"

                android:layout_weight="80"
                >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/greysh"
                />


            <ListView
                android:id="@+id/lvCategory"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingBottom="5dp"
                android:paddingTop="0dp"

                android:layout_weight="0"

            />


        </LinearLayout>




<LinearLayout
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"

    android:weightSum="100"
    android:layout_weight="20"
    >

    <TextView
        android:id="@+id/tvCurentCategory"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAllCaps="true"
        android:textColor="@color/skyBlue"
        android:background="@color/greysh"
        android:paddingBottom="0dp"
        android:gravity="center"
        android:layout_weight="45"
        android:textSize="15sp"
        android:text="@string/tv_main_current_category"
        />
    <TextView
        android:id="@+id/tvCurentProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/skyBlue"


        android:gravity="left"
        android:layout_weight="0"
        android:textSize="11sp"
        android:text="@string/current_product"
        />
    <GridView
            android:id="@+id/gvProducts"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="10"
            android:numColumns="auto_fit"
            android:paddingTop="15dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:columnWidth="65dp"
            android:stretchMode="columnWidth"
            />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:background="@color/greysh"

        android:layout_weight="45"
        android:gravity="center"

        >
        <TextView
            android:id="@+id/tvAddNewCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:gravity="center"
            android:textSize="12dp"
            android:layout_gravity="center"
            android:textColor="@color/skyBlue"
            android:text="@string/tv_main_add_category"
            />
        <TextView
            android:id="@+id/tvAddNewProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="12dp"
            android:layout_gravity="center"
            android:paddingLeft="15dp"
            android:gravity="center"
            android:textColor="@color/skyBlue"
            android:text="@string/tv_main_add_product"
            />
        <TextView
            android:id="@+id/tvAddNewProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:textSize="12dp"
            android:textColor="@color/skyBlue"
            android:text="@string/tv_main_add_product_name"

            />
    </LinearLayout>

</LinearLayout>
    </LinearLayout>

</LinearLayout>

