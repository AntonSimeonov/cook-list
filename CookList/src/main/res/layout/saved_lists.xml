<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvSavedListsStatement"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
        android:textColor="@color/white"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:background="@drawable/header_saved_lists"
            android:text="@string/tv_saved_lists"
            />
    <TextView
        android:id="@+id/tvSavedListsNumberOfLists2"
        android:textColor="@color/greysh"
        android:textAllCaps="true"
        android:gravity="left"

        android:layout_height="wrap_content"
        android:layout_width="fill_parent" />
    <ListView
            android:id="@+id/lvSavedListsInDB"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:paddingBottom="0dp"

            />

</LinearLayout>